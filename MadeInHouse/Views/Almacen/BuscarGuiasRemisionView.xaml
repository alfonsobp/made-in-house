<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Almacen="clr-namespace:MadeInHouse.Views.Almacen" 
            x:Class="MadeInHouse.ViewModels.Almacen.BuscarGuiasRemisionView" 
             mc:Ignorable="d" d:DesignWidth="600" Height="679">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="247*"/>
            <RowDefinition Height="387*"/>
        </Grid.RowDefinitions>
        <ToolBar VerticalAlignment="Top">
            <ToolBar.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FF535050" Offset="0.073"/>
                    <GradientStop Color="Snow" Offset="1"/>
                </LinearGradientBrush>
            </ToolBar.Background>
            <Button x:Name="AbrirMantenerGuiaDeRemision">
                <Image Source="/Assets/new2.png" Height="30" Width="30" />
            </Button>
            <Button>
                <Image Source="/Assets/edit2.png" Height="30" Width="30" />
            </Button>
            <Button>
                <Image Source="/Assets/save.png" Height="30" Width="30" />
            </Button>
            <Button>
                <Image Source="/Assets/delete.png" Height="30" Width="30" />
            </Button>
            <Button>
                <Image Source="/Assets/eraser.png" Height="30" Width="30" />
            </Button>
            <Button Height="30" Width="30">
                <Image Source="/Assets/refresh.png" />
            </Button>
        </ToolBar>
        <GroupBox Header="Criterios de búsqueda" Margin="38,34,39,22" Grid.Row="1" FontSize="16">
            
            <Grid Margin="0,0,0,-7">
            <Label Content="Código" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="71" Margin="96,25,0,0" FontSize="14"/>
            <Label Content="Tipo" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="58" FontSize="14" Margin="97,108,0,0"/>
            <Label Content="Fecha" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="61" FontSize="14" Margin="97,67,0,0"/>
                <TextBox Height="23" Margin="208,25,154,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
                <DatePicker Margin="208,68,154,0" VerticalAlignment="Top"/>
                <ComboBox Margin="208,111,154,0" Height="27" VerticalAlignment="Top">
                    <ComboBoxItem Content="Traslado interno" />
                    <ComboBoxItem Content="Traslado externo" />
                </ComboBox>
                <Button Background="Transparent" Margin="0,0,64,131" HorizontalAlignment="Right" Width="30" Height="30" VerticalAlignment="Bottom">
                    <Image Source="/Assets/find.png" />
                </Button>
            </Grid>
        </GroupBox>
        <DataGrid Margin="38,53,39,185" Grid.Row="2" HeadersVisibility="All" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Código" Width="120"/>
                <DataGridTextColumn Header="Fecha" Width="120"/>
                <DataGridTextColumn Header="Tipo" Width="120"/>
                <DataGridTextColumn Header="Tienda" Width="200"/>
            </DataGrid.Columns>
            
        </DataGrid>

    </Grid>
</UserControl>
