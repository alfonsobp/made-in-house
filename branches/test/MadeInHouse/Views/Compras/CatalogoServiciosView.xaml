            </Button>
            <Button Height="50" Width="50">
                <Image Source="/MadeInHouse;component/Assets/refresh.png" Margin="0,7,0,5" RenderTransformOrigin="1.779,1.036" Width="43" />
            </Button>
        </ToolBar>
        <GroupBox Header="Catálogo de Servicios" Margin="-620,41,640,15"/>
        <Label Content="Nombre:" Margin="21,96,546,328"/>
        <TextBox Margin="108,96,273,0" TextWrapping="Wrap" Height="23" VerticalAlignment="Top"/>

