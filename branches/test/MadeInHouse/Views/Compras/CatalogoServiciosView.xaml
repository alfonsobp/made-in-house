             mc:Ignorable="d" 
              d:DesignHeight="450" d:DesignWidth="640">
    <Border Background="White" BorderBrush="Black" BorderThickness="2" CornerRadius="6">
        <StackPanel>
            <Layouts:TitleBarTemplate title="Catalogo de Servicios" />
