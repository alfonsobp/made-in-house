                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                    <GradientStop Color="#FF6D6D6D" Offset="0.429"/>
                    <GradientStop Color="#FF646464" Offset="0.37"/>
                    <GradientStop Color="#FF494949" Offset="0.261"/>
                    <GradientStop Color="#FF2B2B2B" Offset="0.125"/>
                    <GradientStop Color="#FF1C1C1C" Offset="0.083"/>
                </LinearGradientBrush>
            </Button.OpacityMask>
            <Image Source="/MadeInHouse;component/Assets/minus.png" Height="20" Width="50" >
                <Image.OpacityMask>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                        <GradientStop Color="#FF6D6D6D" Offset="0.429"/>
                        <GradientStop Color="#FF646464" Offset="0.37"/>
                        <GradientStop Color="#FF494949" Offset="0.261"/>
                        <GradientStop Color="#FF2B2B2B" Offset="0.125"/>
                        <GradientStop Color="#FF1C1C1C" Offset="0.083"/>
                    </LinearGradientBrush>
                </Image.OpacityMask>
            </Image>
        </Button>
        <Label Content="Codigo:" Margin="21,68,546,356"/>
        <TextBox Margin="108,68,273,0" TextWrapping="Wrap" Height="23" VerticalAlignment="Top"/>
