<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Almacen="clr-namespace:MadeInHouse.Views.Almacen" 
            x:Class="MadeInHouse.ViewModels.Almacen.BuscarGuiasRemisionView" 
             mc:Ignorable="d" Height="569" Width="498">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="211*"/>
            <RowDefinition Height="320*"/>
        </Grid.RowDefinitions>
        <ToolBar VerticalAlignment="Top" Height="41" Grid.RowSpan="2">
            <ToolBar.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FF535050" Offset="0.073"/>
                    <GradientStop Color="Snow" Offset="1"/>
                </LinearGradientBrush>
            </ToolBar.Background>
            <Button x:Name="AbrirMantenerGuiaDeRemision">
                <Image Source="/Assets/new2.png" Height="30" Width="30" />
            </Button>
            <Button>
                <Image Source="/Assets/edit2.png" Height="30" Width="30" />
            </Button>
            <Button>
                <Image Source="/Assets/save.png" Height="30" Width="30" />
            </Button>
            <Button>
                <Image Source="/Assets/delete.png" Height="30" Width="30" />
            </Button>
            <Button>
                <Image Source="/Assets/eraser.png" Height="30" Width="30" />
            </Button>
            <Button Height="30" Width="30">
                <Image Source="/Assets/refresh.png" />
            </Button>
        </ToolBar>
        <GroupBox Header="Criterios de búsqueda" Margin="28,34,28,0" Grid.Row="1" FontSize="16" HorizontalAlignment="Center" Width="442" Height="162" VerticalAlignment="Top">
            
            <Grid Margin="0,0,-2,-7" HorizontalAlignment="Left" Width="422">
            <Label Content="Código:" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="71" Margin="10,10,0,0" FontSize="14"/>
            <Label Content="Tipo:" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="58" FontSize="14" Margin="10,81,0,0"/>
            <Label Content="Fecha:" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="61" FontSize="14" Margin="10,46,0,0"/>
                <TextBox Margin="106,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Width="193"/>
                <DatePicker Margin="106,44,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="193"/>
                <ComboBox Margin="106,81,0,0" Height="27" VerticalAlignment="Top" HorizontalAlignment="Left" Width="193">
                    <ComboBoxItem Content="Traslado interno" />
                    <ComboBoxItem Content="Traslado externo" />
                </ComboBox>
                <Button Background="Transparent" Margin="319,0,0,108" HorizontalAlignment="Left" Width="86" Height="23" VerticalAlignment="Bottom">
                    <Image Source="/Assets/find.png" />
                </Button>
            </Grid>
        </GroupBox>
        <DataGrid Margin="28,19,28,0" Grid.Row="2" HeadersVisibility="All" Height="241" VerticalAlignment="Top" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Código" Width="120"/>
                <DataGridTextColumn Header="Fecha" Width="120"/>
                <DataGridTextColumn Header="Tipo" Width="120"/>
                <DataGridTextColumn Header="Tienda" Width="200"/>
            </DataGrid.Columns>
            
        </DataGrid>

    </Grid>
</UserControl>
