<UserControl xmlns:Layouts="clr-namespace:MadeInHouse.Views.Layouts"  x:Class="MadeInHouse.Views.Almacen.ProductoMantenerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:designWidth="499.576" Height="530">
    <Border BorderBrush="Black" BorderThickness="2" CornerRadius="6" Background="White">
        <StackPanel>
            <Layouts:TitleBarTemplate title="Nuevo producto" />
            <Grid>
                <ToolBar VerticalAlignment="Top">
                    <ToolBar.Background>
                        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                            <GradientStop Color="#FF535050" Offset="0.073"/>
                            <GradientStop Color="Snow" Offset="1"/>
                        </LinearGradientBrush>
                    </ToolBar.Background>
                    <Button ToolTip="Nuevo Producto">
                        <Image Source="/MadeInHouse;component/Assets/new2.png" Height="30" Width="30" />
                    </Button>
                    <Button ToolTip="Modificar Producto" x:Name="EditarProducto">
                        <Image Source="/MadeInHouse;component/Assets/edit2.png" Height="30" Width="30" />
                    </Button>
                    <Button x:Name="GuardarProducto" ToolTip="GuardarProducto">
                        <Image Source="/MadeInHouse;component/Assets/save.png" Height="30" Width="30" />
                    </Button>
                    <Button ToolTip="Eliminar Producto">
                        <Image Source="/MadeInHouse;component/Assets/delete.png" Height="30" Width="30" />
                    </Button>
                    <Button ToolTip="Limpiar Formulario">
                        <Image Source="/MadeInHouse;component/Assets/eraser.png" Height="30" Width="30" />
                    </Button>
                    <Button ToolTip="Refresh" Height="30" Width="30">
                        <Image Source="/MadeInHouse;component/Assets/refresh.png" />
                    </Button>
                </ToolBar>
                
                    <Grid Height="377" VerticalAlignment="Top" HorizontalAlignment="Left" Width="469" Margin="0,41,0,-41">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="260"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="14*"/>
                        <ColumnDefinition Width="53*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Código:" HorizontalAlignment="Left" Margin="17,24,0,0" VerticalAlignment="Top" Height="26" Width="94" Grid.ColumnSpan="2"/>
                        <TextBox  x:Name="TxtCodigo" HorizontalAlignment="Left" Height="23" Margin="25,24,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="160" RenderTransformOrigin="0.717,-0.522" Grid.Column="1" IsEnabled="False"/>
                        <TextBox x:Name="TxtNombre" HorizontalAlignment="Left" Height="23" Margin="25,55,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="160" Grid.Column="1" IsEnabled="{Binding Editar}"/>
                    <TextBox  MaxLength="3" x:Name="TxtAbreviatura" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="25,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="78" IsEnabled="{Binding Editar}" />
                    <Label Content="Línea:" HorizontalAlignment="Left" Margin="17,0,0,0" VerticalAlignment="Top" Width="94" Grid.ColumnSpan="2" Grid.Row="1" Height="26" />
                        <Label Content="Sublínea:" HorizontalAlignment="Left" Margin="17,31,0,0" VerticalAlignment="Top" Width="94" Grid.ColumnSpan="2" Grid.Row="1" Height="26"/>
                        <Label Content="Unidad Medida:" HorizontalAlignment="Left" Margin="17,62,0,0" VerticalAlignment="Top" Width="94" Grid.ColumnSpan="2" Grid.Row="1" Height="26"/>
                    <ComboBox  SelectedIndex="0"  
                               SelectedValue="{Binding Path=SelectedValue, Mode=OneWayToSource}"
                               ItemsSource="{Binding Path=LstLineasProducto}"
                               DisplayMemberPath="Nombre"
                               SelectedValuePath="IdLinea" 
                               HorizontalAlignment="Left" 
                               Margin="25,4,0,0" 
                               VerticalAlignment="Top" Width="160" Grid.Column="1" Grid.Row="1" Height="22"
                               IsEnabled="{Binding Editar}"
                               />
                        
                        <ComboBox  
                            SelectedValue="{Binding Path=SelectedValueSub,Mode=OneWayToSource}"
                            SelectedIndex="{Binding Path=SelectedIndex}"
                            ItemsSource="{Binding Path=LstSubLineasProducto}"
                            DisplayMemberPath="Nombre"
                            SelectedValuePath="IdSubLinea" 
                            
                            HorizontalAlignment="Left" Margin="25,35,0,0" VerticalAlignment="Top" Width="160" Grid.Column="1" Grid.Row="1" Height="22"
                            IsEnabled="{Binding Editar}"/>
                        <ComboBox 
                            
                            SelectedValue="{Binding Path=SelectedValueUnid,Mode=OneWayToSource}"
                            SelectedIndex="0"
                            ItemsSource="{Binding Path=LstUnidadMedida}"
                            DisplayMemberPath="Nombre"
                            SelectedValuePath="IdUnidad" 
                            HorizontalAlignment="Left" Margin="25,66,0,0" VerticalAlignment="Top" Width="160" Grid.Column="1" Grid.Row="1" Height="22" 
                            IsEnabled="{Binding Editar}" />
                        
                        <CheckBox IsChecked="{Binding Percepcion}" Content="Percepción" HorizontalAlignment="Left" Margin="25,101,0,0" VerticalAlignment="Top" Grid.Column="1" Grid.Row="1" Height="15" Width="78"  IsEnabled="{Binding Editar}"/>
                    <Label Content="Nombre:" HorizontalAlignment="Left" Margin="17,51,0,0" VerticalAlignment="Top" Width="94" Grid.ColumnSpan="2" Height="26"/>
                        <TextBox x:Name="TxtDescrip" HorizontalAlignment="Left" Height="96" Margin="25,129,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="160" Grid.Column="1" Grid.Row="1" IsEnabled="{Binding Editar}"/>
                        <Label  Content="Descripcion:" HorizontalAlignment="Left" Margin="17,129,0,0" VerticalAlignment="Top" Grid.Row="1" Height="26" Width="74"/>
                        <Image  Source="/Assets/anonimo.png" HorizontalAlignment="Left" Height="182" Width="134" Margin="226,24,0,0" VerticalAlignment="Top" Grid.Column="1" Grid.RowSpan="2"/>
                        <Button Content="Ingresar Imagen" Margin="226,129,23,0" VerticalAlignment="Top" Grid.Column="1" Grid.Row="1" Height="20"/>
                        <Label Content="Sujeto a:" HorizontalAlignment="Left" Margin="17,97,0,0" VerticalAlignment="Top" Width="87" Grid.ColumnSpan="2" Grid.Row="1" Height="26"/>
                    
                    <Label Content="Abreviatura:" HorizontalAlignment="Left" Margin="17,89,0,0" VerticalAlignment="Top" Width="81" Height="26"/>

                </Grid>
                
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
