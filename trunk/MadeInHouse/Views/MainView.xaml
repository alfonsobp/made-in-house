                        <Button x:Name="AbrirBuscadorServicio"   Background="Black" Foreground="white" BorderThickness="0" Content="Buscar de Servicios" FontSize="20"  Grid.Row="6" />


                        <Button  Background="Gray" Foreground="white" BorderThickness="0" Content="Solicitudes de Adquisicion" FontSize="20"  Grid.Row="7"/>                       
                        <Button  x:Name="AbrirBuscadorSolicitudesAdquisicion"  Background="Black" Foreground="white" BorderThickness="0" Content="Buscar de Solicitudes" FontSize="20"  Grid.Row="8"/>
                        <Button x:Name="AbrirSeleccionDeProveedores"  Background="Black" Foreground="white" BorderThickness="0" Content="Seleccion de proveedores" FontSize="20"  Grid.Row="9"/>

                        <Button  Background="Gray" Foreground="white"  BorderThickness="0" Content="Ordenes de Compra" FontSize="20"  Grid.Row="10"/>
