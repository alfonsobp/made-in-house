                </Expander>
                <Expander Header="RRHH"    Foreground="Gray" FontSize="40" Style="{StaticResource ExpanderStyle}" >
                    <Expander.Background>
                        <ImageBrush AlignmentX="Right" ImageSource="/MadeInHouse;component/Assets/rrhh.png" Stretch="None"/>
                    </Expander.Background>

                </Expander>
                <Expander Header="Seguridad"   FontSize="40"  Foreground="Gray"  Style="{StaticResource ExpanderStyle}">
                    <Expander.Background>
                        <ImageBrush AlignmentX="Right" ImageSource="/MadeInHouse;component/Assets/seguridad.png" Stretch="None"/>
                    </Expander.Background>
                    <Grid Background="White" Height="Auto">
                        <Grid.RowDefinitions>
                            <RowDefinition />
