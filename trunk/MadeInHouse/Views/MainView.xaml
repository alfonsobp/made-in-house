                        <Button x:Name="AbrirNuevoCliente"   Background="Black" Foreground="white" BorderThickness="0" Content="Nuevo Cliente" FontSize="20" Grid.Row="2"/>
                        <Button Background="Gray" Foreground="white" BorderThickness="0" Content="Ventas" FontSize="20" Grid.Row="3"/>
                        <Button x:Name="AbrirListadoVenta"   Background="Black" Foreground="white" BorderThickness="0" Content="Buscar" FontSize="20" Grid.Row="4"/>
                        <Button x:Name="AbrirNuevaVenta"   Background="Black" Foreground="white" BorderThickness="0" Content="Nueva Venta" FontSize="20" Grid.Row="5"/>
                        <Button x:Name="AbrirProforma"   Background="Black" Foreground="white" BorderThickness="0" Content="Proformas" FontSize="20" Grid.Row="6"/>
                        <Button Background="Gray" Foreground="white" BorderThickness="0" Content="Devoluciones" FontSize="20" Grid.Row="7"/>
                        <Button x:Name="AbrirListadoDevoluciones"   Background="Black" Foreground="white" BorderThickness="0" Content="Buscar" FontSize="20" Grid.Row="8"/>
                        <Button x:Name="AbrirRegistrarDevolucion"   Background="Black" Foreground="white" BorderThickness="0" Content="Nueva Devolucion" FontSize="20" Grid.Row="9"/>
                        <Button x:Name="AbrirListadoNotaCredito"   Background="Black" Foreground="white" BorderThickness="0" Content="Registrar Nota de Crédito" FontSize="20" Grid.Row="10"/>
                        <Button Background="Gray" Foreground="white" BorderThickness="0" Content="Promociones de Productos" FontSize="20" Grid.Row="11"/>
