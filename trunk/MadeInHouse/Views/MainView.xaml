                        <Button x:Name="AbrirNuevaPromoProducto"   Background="Black" Foreground="white" BorderThickness="0" Content="Nueva Promoción" FontSize="20" Grid.Row="13"/>
                        <Button Background="Gray" Foreground="white" BorderThickness="0" Content="Promociones de Servicios" FontSize="20" Grid.Row="14"/>
                        <Button x:Name="AbrirListadoPromoServicio"   Background="Black" Foreground="white" BorderThickness="0" Content="Buscar" FontSize="20" Grid.Row="15"/>
                        <Button x:Name="AbrirNuevaPromoServicio"   Background="Black" Foreground="white" BorderThickness="0" Content="Nueva Promoción" FontSize="20" Grid.Row="16"/>
